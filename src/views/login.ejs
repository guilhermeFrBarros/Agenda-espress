<%- include("includes/head") %>
  <%- include("includes/nav") %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Login</h1>
          <p class="text-center lead">Criar Conta ou entrar</p>

          <div class="row">
            <div class="col-lg">
              <h4 class="">Faça seu cadastro</h4>
              <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                <div class="form-group">
                  <label for="exampleFormControlInput1">Seu email</label>
                  <input type="email" class="form-control" name="email" placeholder="name@example.com">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Sua Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Crie a conta</button>
              </form>
            </div>

            <div class="col-lg">
              <h4 class="">Faça seu Login</h4>
              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                <div class="form-group">
                  <label for="exampleFormControlInput1">Seu email</label>
                  <input type="email" class="form-control" name="email" placeholder="name@example.com">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Sua Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
              </form>
            </div>

            <div class="col-lg-2"></div>
          </div>
        </div>
        <%- include("includes/footer") %>